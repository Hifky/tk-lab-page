---
import SlideLayout from '@layouts/slide_layout.astro'
// images
import { Image } from 'astro:assets'
import ghost from './Images/ghost.png'
---

<SlideLayout>
    <div class="slide-content" style="display: flex; justify-content: center; align-items: center;">
        <div class="textArea">
            <div class="text first" style="font-size: 60px; opacity: 1;">
                Are You Sure?
            </div>
        </div>
        <div class="buttonArea" style="opacity: 0;">
            <button id="no" style="
            top: 85%;
            left: 30%;
            transform: translate(-50%, -50%);
            width: 450px;
            height: 50px;
            ">NO</button>
            <button id="yes" style="
            top: 85%;
            left: 75%;
            transform: translate(-50%, -50%);
            width: 300px;
            height: 50px;
            
            ">YES</button>
        </div>
        <Image src={ghost} alt="ghost" class="ghost" style="width: 400px; transform: translate(-50%, -50%); opacity: 0; position: absolute; top: 70%; left: 50%; transition: opacity 1s, width 1s, transform 1s; z-index: -1;"/>
    </div>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const buttonArea = document.querySelector('.buttonArea');
            const ghost = document.querySelector('.ghost');

            setTimeout(() => {
                buttonArea.style.transition = "opacity 1s ease-in-out"
                buttonArea.style.opacity = 1;
            }, 300);

            // ボタンが押されたら画面遷移
            const noButton = document.getElementById('no');
            noButton.addEventListener('click', () => {
                ghost.style.opacity = 1;
                ghost.style.width = "800px";
                ghost.style.zIndex = 10;
                ghost.style.transform = "translate(-50%, -50%) scale(1)";
                setTimeout(() => {
                    const nextPageUrl = './slide5.html';

                // 次のページを読み込む
                window.fetch(nextPageUrl).then((response) => {
                    // 読み込みが完了したら画面遷移を行う
                    window.location.href = nextPageUrl;
                });
                }, 3000);
            });

            // ボタンが押されたら画面遷移
            const yesButton = document.getElementById('yes');
            yesButton.addEventListener('click', () => {
                const nextPageUrl = './slide6.html';

                // 次のページを読み込む
                window.fetch(nextPageUrl).then((response) => {
                    // 読み込みが完了したら画面遷移を行う
                    window.location.href = nextPageUrl;
                });
            });
        });
    </script>
</SlideLayout>