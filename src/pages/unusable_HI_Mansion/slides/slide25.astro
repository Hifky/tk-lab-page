---
import SlideLayout from '@layouts/slide_layout.astro'
// images
import { Image } from 'astro:assets'
import ghost from './Images/ghost.png'
---

<SlideLayout>
    <div class="slide-content">
        <div class="textArea" style="position: relative; top: 10px; left: 20px; transform: translate(0%, 0%);">
            <div class="text first" style="position: absolute; display: inline-block; font-size: 40px; opacity: 0;">
                さぁ、問題です！
            </div>
            <div class="text second"
                style="position: absolute; top: 80px; display: inline-block; font-size: 40px; opacity: 0;">
                今から示す漢字と同じ漢字の<br>
                ボタンを<span class="white" style="text-decoration: underline;">5秒以内</span>にクリックしてください
            </div>
            <div class="text third"
                style="position: absolute; top: 200px; left:40px; display: inline-block; font-size: 40px; opacity: 0;">
                例えば、
            </div>
            <div class="text fourth"
                style="position: absolute; top: 280px; left:100px; display: inline-block; font-size: 40px; opacity: 0;">
                <span class="white">「東」</span>と表示されたら・・・
            </div>
            <div class="text fifth"
                style="position: absolute; top: 360px; left:100px; display: inline-block; font-size: 40px; opacity: 0;">
                <span class="white">「北」</span>と表示されたら・・・
            </div>
            <div class="text sixth"
                style="position: absolute; top: 440px; display: inline-block; font-size: 40px; opacity: 0;">
                をクリックしてください
            </div>
        </div>

        <Image src={ghost} alt="ghost" class="ghost" style="width: 180px; transform: translate(-50%, -50%); opacity: 0; position: absolute; top: 18%; left: 85%; transition: opacity 1s, width 1s, transform 1s;"/>
        <div class="textButton" id="east" style="
            transform: translate(-50%, -50%);
            opacity: 0; position: absolute; top: 56%; left: 80%;
            transition: opacity 1s, width 1s, transform 1s;
            ">東</div>
        <div class="textButton" id="north" style="
            transform: translate(-50%, -50%);
            opacity: 0; position: absolute; top: 75%; left: 80%;
            transition: opacity 1s, width 1s, transform 1s;
            ">北</div>
    </div>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const textFirst = document.querySelector('.first');
            const textSecond = document.querySelector('.second');
            const textThird = document.querySelector('.third');
            const textFourth = document.querySelector('.fourth');
            const textFifth = document.querySelector('.fifth');
            const textSixth = document.querySelector('.sixth');
            const ghost = document.querySelector('.ghost');
            const east = document.querySelector('#east');
            const north = document.querySelector('#north');

            // 画面の要素を時間差で登場させる
            setTimeout(() => {
                textFirst.style.transition = "opacity 2s ease-in-out";
                ghost.style.transition = "opacity 2s ease-in-out";
                textFirst.style.opacity = 1;
                ghost.style.opacity = 1;
            }, 500);

            setTimeout(() => {
                textSecond.style.transition = "opacity 2s ease-in-out";
                textSecond.style.opacity = 1;
            }, 3000);

            setTimeout(() => {
                textThird.style.transition = "opacity 1s ease-in-out";
                textThird.style.opacity = 1;
            }, 8000);

            setTimeout(() => {
                textFourth.style.transition = "opacity 2s ease-in-out";
                textFourth.style.opacity = 1;
            }, 9000);

            setTimeout(() => {
                east.style.transition = "opacity 1s ease-in-out";
                east.style.opacity = 1;
            }, 11000);

            setTimeout(() => {
                textFifth.style.transition = "opacity 2s ease-in-out";
                textFifth.style.opacity = 1;
            }, 12000);

            setTimeout(() => {
                north.style.transition = "opacity 1s ease-in-out";
                north.style.opacity = 1;
            }, 14000);

            setTimeout(() => {
                textSixth.style.transition = "opacity 2s ease-in-out";
                textSixth.style.opacity = 1;
            }, 15000);

            setTimeout(() => {
                const nextPageUrl = './slide26.html';

                // 次のページを読み込む
                window.fetch(nextPageUrl).then((response) => {
                    // 読み込みが完了したら画面遷移を行う
                    window.location.href = nextPageUrl;
                });
            }, 20000);
        });
    </script>
</SlideLayout>