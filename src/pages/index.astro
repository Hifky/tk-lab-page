---
import Layout from '../layouts/Layout.astro'
import LinkToForm from '../components/LinkToForm.astro'
import { getCollection } from 'astro:content'
import { Icon } from 'astro-icon'

const news_posts = await getCollection('blog', ({ data }) => {
  return data.tag.includes('news')
})
---

<Layout title="高橋・狩川研究室HP">
  <div class="container mx-auto">
    <!-- ランディング -->
    <section class="">
      <div class="">
        <div class="">
          <div
            class="group relative mx-auto flex h-60 w-full items-center md:h-96"
          >
            <img
              class="absolute h-full w-full object-cover object-center"
              src="city2-unsplash.jpg"
            />
            <p
              class="relative mx-auto p-4 text-center text-3xl font-extrabold text-white backdrop-blur-lg backdrop-brightness-75"
            >
              安全な社会技術システムのために
            </p>
          </div>
        </div>
        <!-- アイコン列 -->
        <section class="body-font text-gray-600">
          <div class="container mx-auto px-5 pt-12 pb-24">
            <div class="-m-4 flex flex-wrap">
              <!-- items start -->
              <div class="p-4 md:w-1/3">
                <div class="block items-center rounded-lg bg-slate-100 p-8">
                  <div class="relative overflow-hidden text-center">
                    <div
                      class="mx-auto rounded-full w-12 h-12 m-4 text-indigo-600"
                    >
                      <Icon name="ph:magnifying-glass" />
                    </div>
                    <h2 class="title-font text-lg font-medium text-gray-900">研究内容</h2>
                    <p class="text-base text-gray-600">
                      高橋・狩川研の研究内容を知る
                    </p>
                    <a href="#research">
                      <div class="mx-auto mt-3 w-10 h-10 text-indigo-500">
                        <Icon name="mdi:chevron-down" />
                      </div>
                    </a>
                  </div>
                </div>
              </div>
              <!-- items end -->
              <!-- items start -->
              <div class="p-4 md:w-1/3">
                <div class="block items-center rounded-lg bg-slate-100 p-8">
                  <div class="relative overflow-hidden text-center">
                    <div
                      class="mx-auto rounded-full w-12 h-12 m-4 text-indigo-600"
                    >
                      <Icon name="ic:baseline-newspaper" />
                    </div>
                    <h2 class="title-font text-lg font-medium text-gray-900">ニュース</h2>
                    <p class="text-base text-gray-600">
                      高橋・狩川研の最近の様子を知る
                    </p>
                    <a href="#news">
                      <div class="mx-auto mt-3 w-10 h-10 text-indigo-500">
                        <Icon name="mdi:chevron-down" />
                      </div>
                    </a>
                  </div>
                </div>
              </div>
              <!-- items end -->
              <!-- items start -->
              <div class="p-4 md:w-1/3">
                <div class="block items-center rounded-lg bg-slate-100 p-8">
                  <div class="relative overflow-hidden text-center">
                    <div
                      class="mx-auto rounded-full w-12 h-12 m-4 text-indigo-600"
                    >
                      <Icon name="ic:outline-info" />
                    </div>
                    <h2 class="title-font text-lg font-medium text-gray-900">トピック</h2>
                    <p class="text-base text-gray-600">
                      高橋・狩川研はこんな研究室です
                    </p>
                    <a href="#topics">
                      <div class="mx-auto mt-3 w-10 h-10 text-indigo-500">
                        <Icon name="mdi:chevron-down" />
                      </div>
                    </a>
                  </div>
                </div>
              </div>
              <!-- items end -->

              
            </div>
          </div>
        </section>
        <!-- アイコン列終わり -->
      </div>
    </section>
  </div>
  <!-- ランディング終わり -->
  <!-- 研究概要 -->
  <section class="mb-4" id="research">
    <div class="bg-white py-6 sm:py-8 lg:py-12">
      <div class="mb-20 flex w-full flex-col text-center">
        <h2
          class="title-font text-md mb-1 font-medium tracking-widest text-indigo-500"
        >
          研究内容
        </h2>
        <h1 class="title-font text-2xl font-medium text-gray-900 sm:text-3xl">
          研究グループに分かれて研究を行っています
        </h1>
      </div>
      <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
        <div class="grid sm:grid-cols-2">
          <!-- product - start -->
          <a
            href="#"
            class="group relative flex h-80 items-end overflow-hidden bg-gray-100 p-4"
          >
            <img
              src="cockpit-unsplash.jpg"
              loading="lazy"
              alt="Cockpit Photo From Unsplash"
              class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
            />

            <div
              class="pointer-events-none absolute inset-0 bg-gradient-to-t from-gray-800 via-transparent to-transparent opacity-50"
            >
            </div>

            <div class="relative flex flex-col">
              <span class="text-gray-300">Group 01</span>
              <span class="text-lg font-semibold text-white lg:text-xl"
                >航空</span
              >
            </div>
          </a>
          <!-- product - end -->

          <!-- product - start -->
          <a
            href="#"
            class="group relative flex h-80 items-end overflow-hidden bg-gray-100 p-4"
          >
            <img
              src="car-unsplash.jpg"
              loading="lazy"
              alt="Photo by Unsplash"
              class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
            />

            <div
              class="pointer-events-none absolute inset-0 bg-gradient-to-t from-gray-800 via-transparent to-transparent opacity-50"
            >
            </div>

            <div class="relative flex flex-col">
              <span class="text-gray-300">Group 02</span>
              <span class="text-lg font-semibold text-white lg:text-xl">AI</span
              >
            </div>
          </a>
          <!-- product - end -->

          <!-- product - start -->
          <a
            href="#"
            class="group relative flex h-80 items-end overflow-hidden bg-gray-100 p-4"
          >
            <img
              src="risk-unsplash.jpg"
              loading="lazy"
              alt="Photo by Unsplash"
              class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
            />

            <div
              class="pointer-events-none absolute inset-0 bg-gradient-to-t from-gray-800 via-transparent to-transparent opacity-50"
            >
            </div>

            <div class="relative flex flex-col">
              <span class="text-gray-300">Group 03</span>
              <span class="text-lg font-semibold text-white lg:text-xl"
                >リスク認知</span
              >
            </div>
          </a>
          <!-- product - end -->

          <!-- product - start -->
          <a
            href="#"
            class="group relative flex h-80 items-end overflow-hidden bg-gray-100 p-4"
          >
            <img
              src="balloon-unsplash.jpg"
              loading="lazy"
              alt="Photo by Unsplash"
              class="absolute inset-0 h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
            />

            <div
              class="pointer-events-none absolute inset-0 bg-gradient-to-t from-gray-800 via-transparent to-transparent opacity-50"
            >
            </div>

            <div class="relative flex flex-col">
              <span class="text-gray-300">Group 04</span>
              <span class="text-lg font-semibold text-white lg:text-xl"
                >認知</span
              >
            </div>
          </a>
          <!-- product - end -->
        </div>
      </div>
    </div>
  </section>

  <!-- ニュース -->
  <section class="mt-4 bg-slate-100 py-10" id="news">
    <div class="mx-auto py-24 text-center">
      <h1 class="text-3xl font-bold">新着ニュース</h1>
    </div>
    <div class="mx-auto w-5/6">
      <div class="w-full overflow-x-auto">
        <table class="table w-full">
          <!-- head -->
          <thead>
            <tr>
              <th>
                <label> index</label>
              </th>
              <th>title</th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            <!-- row -->
            {
              news_posts.map((news_post) => (
                <tr>
                  <th> {news_posts.indexOf(news_post) + 1} </th>
                  <td>
                    <div class="flex items-center space-x-3">
                      <div class="avatar">
                        <div class="mask mask-squircle h-12 w-12">
                          <img
                            src={news_post.data.coverImagePath ?? '/lego-unsplash.jpg'}
                            alt="Avatar News Component"
                          />
                        </div>
                      </div>
                      <div>
                        <div class="font-bold">{news_post.data.title}</div>
                        <div class="text-sm opacity-90">
                          {news_post.data.tag.map((tag) => (
                            <div class="badge-secondary badge-outline badge mr-3">
                              {tag}
                            </div>
                          ))}
                        </div>
                      </div>
                    </div>
                  </td>
                  <th>
                    <a href={news_post.slug}>
                      <button class="btn-md btn">詳細</button>
                    </a>
                  </th>
                </tr>
              ))
            }
          </tbody>
          <tfoot>
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <div class="container mx-auto w-screen py-4">
      <a href="/blog/news" class="flex justify-center"
        ><div class="btn-primary btn">ニュース一覧</div></a
      >
    </div>
  </section>
  <!-- 研究室のようす -->
  <section class="mt-12 rounded-sm bg-white py-10" id="topics">
    <div class="mx-auto w-full p-10 text-center">
      <h1 class="text-3xl font-bold">注目トピック</h1>
    </div>
    <div
      class="mx-auto mb-3 grid grid-cols-1 place-items-center gap-4 md:grid-cols-2 xl:grid-cols-3 xl:gap-y-96"
    >
      <div class="card-compact card w-96 rounded-xl bg-base-100 shadow-xl">
        <figure>
          <img src="/pic_aircraft_sample.jpg" alt="Shoes" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">研究紹介</h2>
          <p>研究内容について</p>
        </div>
      </div>
      <div class="card-compact card w-96 rounded-xl bg-base-100 shadow-xl">
        <figure>
          <img src="/pic_aircraft_sample.jpg" alt="Shoes" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">研究紹介</h2>
          <p>研究内容について</p>
        </div>
      </div>
      <div class="card-compact card w-96 rounded-xl bg-base-100 shadow-xl">
        <figure>
          <img src="/pic_aircraft_sample.jpg" alt="Shoes" />
        </figure>
        <div class="card-body">
          <h2 class="card-title">研究紹介</h2>
          <p>研究内容について</p>
        </div>
      </div>
    </div>
  </section>

  <!-- お問い合わせ -->
  <section class="mt-8">
    <LinkToForm />
  </section>
</Layout>
