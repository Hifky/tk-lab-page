          <h2 class="card-title">研究紹介</h2>
          <p>研究内容について</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ニュース -->
  <section class="mt-4 py-10">
    <div class="mx-auto py-10 text-center">
      <h1 class="text-3xl font-bold">新着ニュース</h1>
    </div>
    <div class="mx-auto w-5/6">
      <div class="w-full overflow-x-auto">
        <table class="table w-full">
          <!-- head -->
          <thead>
            <tr>
              <th>
                <label> index</label>
              </th>
              <th>title</th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            <!-- row -->
            {
              news_posts.map((news_post) => (
                <tr>
                  <th> {news_posts.indexOf(news_post) + 1} </th>
                  <td>
                    <div class="flex items-center space-x-3">
                      <div class="avatar">
                        <div class="mask mask-squircle h-12 w-12">
                          <img
                            src="/pic_aircraft_sample.jpg"
                            alt="Avatar News Component"
                          />
                        </div>
                      </div>
                      <div>
                        <div class="font-bold">{news_post.data.title}</div>
                        <div class="text-sm opacity-90">
                          {news_post.data.tag.map((tag) => (
                            <div class="badge-secondary badge-outline badge mr-3">
                              {tag}
                            </div>
                          ))}
                        </div>
                      </div>
                    </div>
                  </td>
                  <th>
                    <a href={news_post.slug}>
                      <button class="btn-md btn">詳細</button>
                    </a>
                  </th>
                </tr>
              ))
            }
          </tbody>
          <tfoot>
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <div class="container mx-auto w-screen py-4">
      <a href="/blog/news" class="flex justify-center"
        ><div class="btn-primary btn">ニュース一覧</div></a
      >
    </div>
  </section>

  <!-- お問い合わせ -->
  <section class="mt-8 mb-2">
    <div
      class="hero h-1/2"
      style="background-image: url(/pic_aircraft_sample.jpg);"
    >
      <div class="hero-overlay bg-opacity-60"></div>
      <div class="hero-content text-center text-neutral-content">
        <div class="max-w-md">
          <h1 class="mb-5 text-5xl font-bold">お問い合わせ</h1>
          <p class="mb-5">Google Form よりお問い合わせください！</p>
          <a href="https://forms.gle/vwA58wTFZpv5nXQV8">
            <button class="btn-primary btn"> <h4>お問い合わせ</h4></button>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
