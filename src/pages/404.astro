---
import Layout from '@layouts/Layout.astro'
---

<Layout title="Page Not Found" description="The page you requested could not be found.">
  <div class="flex mx-auto max-w-xl">
    <div class="flex-1 textContainer my-auto">
      <h1 class="text-5xl font-black p-2">404</h1>
      <h2 class="text-2xl p-2">Page Not Found</h2>
      <p class="text-xl p-2">The page you requested could not be found.</p>
    </div>
    <div class="imageContainer">
      <img src="/face.png">
    </div>
  </div>
</Layout>
