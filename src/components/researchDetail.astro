---
const {title, subTitle, detail, isLeft} = Astro.props
---

<div>
  <li class="group content-item is-right fadein bg-gray-100 w-full my-10 duration-500 hover:-translate-y-2">
    <div class={`content-itemInner flex w-full ${isLeft ? 'flex-row-reverse' : ''}`}>
      <div class="image-container w-1/3 aspect-square relative m-5">
        <div class="image-containerInner absolute top-0 left-0 w-full h-full overflow-hidden">
          <!-- <Image src={cockpit_color} alt="Cockpit Color Image" class="absolute top-0 left-0 w-full h-full duration-500 group-hover:scale-110" /> -->
          <!-- 背景画像 -->
          <!-- <Image src={cockpit_monotone} alt="Cockpit Monotone Image" class="absolute top-0 left-0 w-full h-full duration-500 group-hover:scale-110 group-hover:opacity-0" /> -->
          <!-- 表示画像 -->
          <slot />
        </div>
      </div>
    
      <div class="content-nameArea w-2/3 my-auto text-center px-5">
        <div class="content-nameInner">
          <h2 class="content-name text-3xl font-serif">{title}</h2>
        </div>
        <h3 class="content-label text-2xl font-serif text-stone-500">
          {subTitle}
        </h3>
        <hr class="content-line w-0 mx-auto my-2 border-px border-blue-300 duration-500 group-hover:w-full" />
        <p class="content-detailTxt text-lg mt-10">
          {detail}          
        </p>
      </div>
    </div>
  </li>
</div>

