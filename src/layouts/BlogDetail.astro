---
import Layout from '@layouts/Layout.astro'
const { data } = Astro.props
---

<Layout title={data.title}>
  <style is:global>
    .markdown-body ul {
      @apply mb-4 list-inside list-disc pl-4;
    }
    .markdown-body h1,
    h2,
    h3 {
      @apply mb-4 flex font-bold;
    }
    .markdown-body h1,
    h2 {
      @apply border-b-2 border-solid border-gray-200;
    }
    .markdown-body h1 {
      @apply pb-2 text-3xl;
    }
    .markdown-body h2 {
      @apply text-2xl;
    }
    .markdown-body h3 {
      @apply text-lg;
    }
    .markdown-body p {
      @apply mb-4;
    }
    .markdown-body a {
      @apply text-primary underline hover:text-primary-focus;
    }
    /* ヘディングのアンカーのスタイル */
    .markdown-body a.anchor {
      @apply opacity-30 hover:opacity-100;
    }
    .markdown-body.sr-only {
      @apply hidden;
    }
    /* リストのアイテムのスタイル */
    .markdown-body li.task-list-item {
      @apply list-none;
    }
    .markdown-body input[type='checkbox'] {
      @apply checkbox-primary checkbox checkbox-md;
    }
  </style>

  <div class="flex">
    <!-- article start -->
    <div class="mx-auto max-w-2xl space-y-12 px-6 py-16 lg:w-2/3">
      <article class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-4xl font-bold md:text-5xl">
            {data.title}
          </h1>
          <div
            class="flex w-full flex-col items-start justify-between dark:text-gray-400 md:flex-row md:items-center"
          >
            <div class="flex items-center md:space-x-2">
              <p class="text-sm">Leroy Jenkins • July 19th, 2021</p>
            </div>
            <p class="mt-3 flex-shrink-0 text-sm md:mt-0">高橋・狩川研究室</p>
          </div>
        </div>
        <div class="">
          <p>{data.lead ?? ''}</p>
        </div>

        <div>
          <div class="flex flex-wrap space-x-2">
            {
              data.tag.map((tag: string) => (
                <a
                  rel="noopener noreferrer"
                  href="#"
                  class="btn btn-outline btn-sm rounded-sm px-3 py-1 hover:underline"
                >
                  #{tag}
                </a>
              ))
            }
          </div>
        </div>
        <div class="markdown-body border-t border-dashed border-neutral py-6">
          <slot />
        </div>
      </article>
    </div>
    <!-- article end -->
    <!-- sidebar start -->
    <div class="hidden w-1/3 space-y-12 py-16 lg:block">
      <div>author detail here</div>
      <div>toc</div>
    </div>
  </div>
</Layout>
